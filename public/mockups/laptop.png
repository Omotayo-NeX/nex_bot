  <rect x="280" y="310" width="360" height="30" rx="15" fill="#F9FAFB" stroke="#E5E7EB" stroke-width="1"/>
  <rect x="290" y="320" width="280" height="3" rx="1.5" fill="#D1D5DB"/>
  <circle cx="620" cy="325" r="10" fill="#3B82F6"/>
