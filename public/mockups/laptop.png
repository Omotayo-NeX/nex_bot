  <!-- Trackpad -->
  <rect x="350" y="380" width="100" height="60" rx="8" fill="#D1D5DB"/>
  
  <!-- Apple Logo -->
  <circle cx="400" cy="40" r="6" fill="#D1D5DB"/>
  
  <!-- Screen Reflection -->
  <rect x="130" y="60" width="270" height="300" rx="8" fill="url(#screenGradient)" opacity="0.15"/>
  
  <defs>
    <linearGradient id="screenGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#FFFFFF" stop-opacity="0.4"/>
      <stop offset="100%" stop-color="#FFFFFF" stop-opacity="0"/>
    </linearGradient>
  </defs>
