<svg width="800" height="500" viewBox="0 0 800 500" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Laptop Base -->
  <rect x="50" y="350" width="700" height="120" rx="15" fill="#E5E7EB"/>
  <rect x="60" y="360" width="680" height="100" rx="10" fill="#F3F4F6"/>
  
  <!-- Laptop Screen Background -->
  <rect x="120" y="50" width="560" height="320" rx="12" fill="#1F2937"/>
  
  <!-- Screen Bezel -->
  <rect x="130" y="60" width="540" height="300" rx="8" fill="#000000"/>
  
  <!-- App Interface Mock -->
  <!-- Header Bar -->
  <rect x="140" y="70" width="520" height="40" fill="#3B82F6"/>
  <circle cx="160" cy="85" r="4" fill="#FFFFFF" opacity="0.9"/>
  <rect x="175" y="82" width="80" height="6" rx="3" fill="#FFFFFF" opacity="0.9"/>
  <rect x="580" y="82" width="60" height="6" rx="3" fill="#FFFFFF" opacity="0.7"/>
  
  <!-- Sidebar -->
  <rect x="140" y="110" width="120" height="240" fill="#1E293B"/>
  <rect x="150" y="125" width="100" height="8" rx="4" fill="#64748B"/>
  <rect x="150" y="140" width="80" height="6" rx="3" fill="#64748B"/>
  <rect x="150" y="155" width="90" height="6" rx="3" fill="#64748B"/>
  
  <!-- Chat Area -->
  <rect x="260" y="110" width="400" height="240" fill="#FFFFFF"/>
  
  <!-- Chat Messages -->
  <rect x="280" y="130" width="200" height="25" rx="12" fill="#EEF2FF"/>
  <rect x="290" y="137" width="150" height="4" rx="2" fill="#3B82F6"/>
  <rect x="290" y="145" width="120" height="4" rx="2" fill="#6B7280"/>
  
  <rect x="400" y="170" width="180" height="25" rx="12" fill="#F3E8FF"/>
  <rect x="410" y="177" width="140" height="4" rx="2" fill="#8B5CF6"/>
