<svg width="600" height="400" viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="600" height="400" fill="url(#voiceGradient)"/>
  
  <!-- Professional Studio Setup -->
  <rect x="50" y="50" width="500" height="300" rx="20" fill="rgba(255,255,255,0.95)" stroke="rgba(59,130,246,0.2)" stroke-width="2"/>
  
  <!-- Podcast/Recording Setup -->
  <!-- Microphone Stand -->
  <rect x="280" y="320" width="8" height="60" fill="#374151"/>
  <rect x="270" y="315" width="28" height="10" rx="5" fill="#6B7280"/>
  
  <!-- Professional Microphone -->
  <ellipse cx="300" cy="280" rx="25" ry="35" fill="url(#micGradient)"/>
  <rect x="285" y="260" width="30" height="40" rx="15" fill="#1F2937"/>
  <circle cx="300" cy="270" r="8" fill="#3B82F6"/>
  <rect x="275" y="245" width="50" height="8" rx="4" fill="#6B7280"/>
  
  <!-- Sound Waves -->
  <g opacity="0.7">
    <circle cx="300" cy="280" r="60" stroke="#3B82F6" stroke-width="3" fill="none" opacity="0.8"/>
    <circle cx="300" cy="280" r="80" stroke="#3B82F6" stroke-width="3" fill="none" opacity="0.6"/>
    <circle cx="300" cy="280" r="100" stroke="#3B82F6" stroke-width="3" fill="none" opacity="0.4"/>
    <circle cx="300" cy="280" r="120" stroke="#3B82F6" stroke-width="3" fill="none" opacity="0.2"/>
  </g>
  
  <!-- Recording Interface -->
  <rect x="100" y="100" width="180" height="120" rx="15" fill="rgba(30,41,59,0.95)"/>
  
  <!-- Waveform Display -->
  <rect x="110" y="115" width="160" height="60" rx="8" fill="#0F172A"/>
  <g fill="#3B82F6">
    <rect x="120" y="140" width="3" height="20" rx="1.5"/>
    <rect x="130" y="130" width="3" height="35" rx="1.5"/>
    <rect x="140" y="145" width="3" height="15" rx="1.5"/>
    <rect x="150" y="125" width="3" height="40" rx="1.5"/>
    <rect x="160" y="135" width="3" height="25" rx="1.5"/>
    <rect x="170" y="120" width="3" height="45" rx="1.5"/>
    <rect x="180" y="140" width="3" height="20" rx="1.5"/>
    <rect x="190" y="130" width="3" height="35" rx="1.5"/>
    <rect x="200" y="145" width="3" height="15" rx="1.5"/>
    <rect x="210" y="125" width="3" height="40" rx="1.5"/>
    <rect x="220" y="135" width="3" height="25" rx="1.5"/>
    <rect x="230" y="140" width="3" height="20" rx="1.5"/>
    <rect x="240" y="130" width="3" height="35" rx="1.5"/>
    <rect x="250" y="145" width="3" height="15" rx="1.5"/>
  </g>
  
  <!-- Control Buttons -->
  <circle cx="130" cy="195" r="12" fill="#EF4444"/>
  <rect x="126" y="191" width="8" height="8" rx="1" fill="white"/>
  <circle cx="160" cy="195" r="12" fill="#10B981"/>
  <polygon points="156,191 156,199 164,195" fill="white"/>
  <circle cx="190" cy="195" r="12" fill="#F59E0B"/>
  <rect x="186" y="191" width="8" height="8" rx="1" fill="white"/>
  
  <!-- African Person Silhouette -->
  <g transform="translate(380, 120)">
    <circle cx="50" cy="40" r="25" fill="url(#personGradient)"/>
    <rect x="25" y="60" width="50" height="80" rx="25" fill="url(#personGradient)"/>
    <!-- Headphones -->
    <rect x="20" y="25" width="60" height="8" rx="4" fill="#374151"/>
    <circle cx="25" cy="35" r="8" fill="#374151"/>
    <circle cx="75" cy="35" r="8" fill="#374151"/>
  </g>
  
  <!-- Language Flags -->
  <g transform="translate(120, 250)">
    <!-- English -->
    <rect x="0" y="0" width="30" height="20" fill="#1D4ED8" rx="3"/>
    <rect x="5" y="5" width="20" height="2" fill="white"/>
    <rect x="5" y="9" width="20" height="2" fill="#DC2626"/>
    
    <!-- French -->
    <rect x="40" y="0" width="30" height="20" rx="3" fill="white" stroke="#E5E7EB"/>
    <rect x="40" y="0" width="10" height="20" fill="#1D4ED8"/>
    <rect x="60" y="0" width="10" height="20" fill="#DC2626"/>
    
    <!-- Arabic -->
    <rect x="80" y="0" width="30" height="20" rx="3" fill="white" stroke="#E5E7EB"/>
    <rect x="85" y="5" width="20" height="2" fill="#059669"/>
    <circle cx="95" cy="12" r="3" fill="#DC2626"/>
  </g>
  
  <!-- Quality Indicators -->
  <g transform="translate(450, 120)">
    <rect x="0" y="0" width="80" height="40" rx="8" fill="rgba(16,185,129,0.1)"/>
    <text x="40" y="15" text-anchor="middle" fill="#10B981" font-family="Arial" font-size="10" font-weight="bold">HD QUALITY</text>
    <text x="40" y="28" text-anchor="middle" fill="#059669" font-family="Arial" font-size="8">48kHz â€¢ 16-bit</text>
  </g>
  
  <defs>
    <linearGradient id="voiceGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#EEF2FF"/>
      <stop offset="100%" stop-color="#F0F9FF"/>
    </linearGradient>
    <linearGradient id="micGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#4B5563"/>
      <stop offset="100%" stop-color="#1F2937"/>
    </linearGradient>
    <linearGradient id="personGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#92400E"/>
      <stop offset="100%" stop-color="#451A03"/>
    </linearGradient>
  </defs>
</svg>