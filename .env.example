# ==============================================
# NextAuth Configuration (REQUIRED)
# ==============================================
NEXTAUTH_SECRET=your_nextauth_secret_32_chars_minimum
NEXTAUTH_URL=http://localhost:3000
# For production: NEXTAUTH_URL=https://yourdomain.com

# ==============================================
# Database Configuration (REQUIRED)
# ==============================================
DATABASE_URL="postgresql://postgres.your_project:your_password@aws-region.pooler.supabase.com:6543/postgres?sslmode=require"

# ==============================================
# Supabase Configuration (REQUIRED)
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==============================================
# OpenAI Configuration (REQUIRED)
# ==============================================
OPENAI_API_KEY=sk-your_openai_api_key

# ==============================================
# Google OAuth Configuration (REQUIRED for Google login)
# ==============================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_google_client_secret

# ==============================================
# Site Configuration
# ==============================================
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# ==============================================
# Paystack Configuration (OPTIONAL - for payments)
# ==============================================
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_live_or_test_key
PAYSTACK_SECRET_KEY=sk_live_or_test_key

# ==============================================
# Additional API Keys (OPTIONAL)
# ==============================================
GEMINI_API_KEY=your_gemini_api_key
ELEVENLABS_API_KEY=sk_your_elevenlabs_api_key

# ==============================================
# Development Configuration
# ==============================================
AUTH_TRUST_HOST=true
CRON_SECRET=your_secure_random_string_here

# ==============================================
# Validation Checklist:
# ==============================================
# ✅ NEXTAUTH_SECRET: 32+ character random string
# ✅ NEXTAUTH_URL: Full URL with protocol (http/https)
# ✅ DATABASE_URL: Valid PostgreSQL connection string
# ✅ NEXT_PUBLIC_SUPABASE_URL: Starts with https://
# ✅ OPENAI_API_KEY: Starts with sk-
# ✅ Google OAuth: Valid client ID and secret from Google Console
